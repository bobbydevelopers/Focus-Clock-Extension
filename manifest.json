{
  "manifest_version": 3,
  "name": "Productivity Timer",
  "version": "1.0",
  "description": "A simple productivity timer to help you manage work sessions and breaks.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "timer.png"
  },
  "content_scripts": [
    {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "background.js"
        ]
    }
]
}
